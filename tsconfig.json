{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "rootDir": "./",
    "outDir": "./dist",
    "noUnusedParameters": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["nodes_modules/roots"]
  }
}